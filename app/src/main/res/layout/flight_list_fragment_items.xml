<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flightlist_list_items"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10px">

    <TextView
        android:id="@+id/depart_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-black"
        android:text="Depart"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#2196F3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/arrivee_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="50dp"
        android:fontFamily="sans-serif-black"
        android:text="ArrivÃ©e"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#2196F3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/airport_dep_textView"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="Aeroport de depart"
        android:textAlignment="center"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/depart_textView"
        app:layout_constraintStart_toStartOf="@+id/depart_textView"
        app:layout_constraintTop_toBottomOf="@+id/depart_textView" />

    <TextView
        android:id="@+id/date_dep_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:text="Date de depart"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/airport_dep_textView"
        app:layout_constraintStart_toStartOf="@+id/airport_dep_textView"
        app:layout_constraintTop_toBottomOf="@+id/airport_dep_textView" />

    <TextView
        android:id="@+id/airport_arr_textView"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="Aeroport darrive"
        android:textAlignment="center"
        android:textColor="#FC000000"
        app:layout_constraintEnd_toEndOf="@+id/arrivee_textView"
        app:layout_constraintStart_toStartOf="@+id/arrivee_textView"
        app:layout_constraintTop_toBottomOf="@+id/arrivee_textView" />

    <TextView
        android:id="@+id/date_arr_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:text="Date d'arrivee"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/airport_arr_textView"
        app:layout_constraintStart_toStartOf="@+id/airport_arr_textView"
        app:layout_constraintTop_toBottomOf="@+id/airport_arr_textView" />

    <TextView
        android:id="@+id/Vol_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-black"
        android:text="Vol"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#2196F3"
        app:layout_constraintEnd_toStartOf="@+id/arrivee_textView"
        app:layout_constraintStart_toEndOf="@+id/depart_textView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/num_vol_textView"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="num Vol"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/Vol_textView"
        app:layout_constraintStart_toStartOf="@+id/Vol_textView"
        app:layout_constraintTop_toBottomOf="@+id/Vol_textView" />

    <TextView
        android:id="@+id/duree_vol_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:text="duree de vol"
        android:textColor="#020202"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/num_vol_textView"
        app:layout_constraintStart_toStartOf="@+id/num_vol_textView"
        app:layout_constraintTop_toBottomOf="@+id/num_vol_textView"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>